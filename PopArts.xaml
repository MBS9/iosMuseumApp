<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="museumApp.PopArts"
             Title="Pop Arts Museum">
    <VerticalStackLayout>
        <Label 
            Text="Pop Arts Museum"
            FontSize="Title"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image
            Source="visual_arts_logo_large.png"
            HeightRequest="100"
            HorizontalOptions="Center" />
        <Button x:Name="TheLudwigMuseum" Text="The Ludwig Museum"/>
    </VerticalStackLayout>
</ContentPage>
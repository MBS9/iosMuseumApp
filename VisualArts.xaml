<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="museumApp.VisualArts"
             Title="Visual Arts Museums">
    <VerticalStackLayout>
        <Label 
            Text="Visual Arts Museums"
            FontSize="Title"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            SemanticProperties.HeadingLevel="Level1"/>
        <Image
            Source="visual_arts_logo_large.png"
            HeightRequest="100"
            HorizontalOptions="Center"
            SemanticProperties.Description="Visual Arts Museums Logo"/>
        <Button x:Name="TheLudwigMuseum" Text="Ludwig Museum"/>
        <Button x:Name="MaiManoMuseum" Text="Mai Mano Museum"/>
        <Button x:Name="mucsarnokMuseum" Text="Mucsarnok Museum"/>
    </VerticalStackLayout>
</ContentPage>
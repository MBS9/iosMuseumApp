<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="museumApp.InterestsQuiz"
             Title="InterestsQuiz">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
            Text="Welcome to the Quiz!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Header"></Label>
            <Label Text="1. What's your favorite color?" />
            <RadioButton Content="Red"
             x:Name="radio1"
             GroupName="colors"
             CheckedChanged="checkChange"/>
            <RadioButton Content="Green"
             x:Name="radio2"
                         CheckedChanged="checkChange"
             GroupName="colors" />
            <Button Clicked="submitQuiz" Text="Submit"></Button>
            <Label x:Name="successLabel"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Medium"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="museumApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:museumApp">
    <TabBar>
        <Tab Title="Visual Arts"
            Icon="museum.png">
            <ShellContent
                Title="Visual Arts"
                ContentTemplate="{DataTemplate local:VisualArts}"
                Route="VisualArts" />
        </Tab>
        <Tab Title="Science"
            Icon="museum.png">
            <ShellContent
                Title="Science"
                ContentTemplate="{DataTemplate local:Science}"
                Route="Science" />
        </Tab>
        <Tab Title="History"
            Icon="museum.png">
            <ShellContent
                Title="History"
                ContentTemplate="{DataTemplate local:History}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Other"
            Icon="museum.png">
            <ShellContent
                Title="Other"
                ContentTemplate="{DataTemplate local:Other}"
                Route="Other" />
        </Tab>
        <Tab Title="Credits">
            <ShellContent
                Title="Credits"
                ContentTemplate="{DataTemplate local:Credits}"
                Route="Credits" />
        </Tab>
    </TabBar>
</Shell>

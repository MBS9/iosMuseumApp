<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="museumApp.Other"
             Title="Other Museums">
    <VerticalStackLayout>
        <Label 
            Text="Other Museums"
            FontSize="Title"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            SemanticProperties.HeadingLevel="Level1"/>
        <Image
            Source="museum_large.png"
            HeightRequest="100"
            HorizontalOptions="Center"
            SemanticProperties.Description="Other Museums Logo"/>
        <Button x:Name="moneyMuseum" Text="Money Museum"/>
        <Button x:Name="literaryMuseum" Text="Petofi Literary Museum"/>
    </VerticalStackLayout>
</ContentPage>
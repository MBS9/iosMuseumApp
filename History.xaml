<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="museumApp.History"
             Title="History Museums">
    <VerticalStackLayout>
        <Label 
            Text="History Museums"
            FontSize="Title"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image
            Source="history_logo_large.png"
            HeightRequest="100"
            HorizontalOptions="Center" />
        <Button x:Name="holocaustMemorial" Text="Holocaust Memorial Centre"/>
        <Button x:Name="NationalMuseum" Text="National Museum"/>
    </VerticalStackLayout>
</ContentPage>